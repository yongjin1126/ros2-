from launch import LaunchDescription
from launch_ros.actions import Node
def generate_launch_description():
    return LaunchDescription([
        Node(
            package='marker_mapping',
            executable='mapping_node',   # 실행 파일명(너의 mapping_node 엔트리포인트)
            name='mapping_node',
            output='screen',
            # 상대 토픽을 로봇별 절대 토픽으로 리매핑
            remappings=[
                ('marker_map/ID25', '/pinky1/marker_map/ID25'),
                ('marker_map/ID26', '/pinky2/marker_map/ID26'),
                ('marker_map/ID27', '/pinky3/marker_map/ID27'),
            ],
        )
    ])
